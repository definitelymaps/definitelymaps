{
  "compilerOptions": {
    "lib": ["ES2023"],
    "target": "es2023",
    "module": "node16",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [".git/**", "node_modules"]
}
